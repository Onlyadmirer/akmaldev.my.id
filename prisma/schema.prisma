generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id    Int      @id @default(autoincrement())
  email String   @unique
  name  String?
  role  Role    @default(User)
  achievements Achievements[]
  chat  Chat[]
}

model Chat {
  id    Int      @id @default(autoincrement())
  message String
  authorId  Int
  author    User  @relation(fields: [authorId], references: [id])
}

enum Role {
  User
  Admin
}

model Achievements {
  id        Int      @id @default(autoincrement())
  title     String?
  url       String
  publisher String
  issuedOn  String
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}

model Projects {
  id    Int     @id @default(autoincrement())
  title String
  url   String
  stack TechStacks[]
  role  Role  @default(User)
}

model TechStacks {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  projects  Projects[]
}